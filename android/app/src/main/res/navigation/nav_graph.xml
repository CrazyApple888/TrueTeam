<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="ru.nsu.alphacontest.ui.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_cardsFragment"
            app:destination="@id/cardsFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.nsu.alphacontest.login.ui.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/cardsFragment"
        android:name="me.idrew.main_cards.CardsFragment"
        android:label="CardsFragment" />
</navigation>