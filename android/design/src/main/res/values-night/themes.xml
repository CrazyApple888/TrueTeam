<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AlphaContest" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/secondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/primary</item>
        <item name="android:windowBackground">@color/background</item>

        <item name="materialButtonStyle">@style/AlfaButton.Elevated</item>
        <item name="textInputStyle">@style/AlfaTextField</item>
        <item name="android:statusBarColor">@color/accent</item>
    </style>

    <style name="Theme.AlphaContest" parent="Base.Theme.AlphaContest"/>
</resources>